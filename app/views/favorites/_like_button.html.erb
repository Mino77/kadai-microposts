<% if current_user.like?(micropost) %>
  <%= form_for(current_user.favorites.find_by(user_id: current_user.id, micropost_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag( class: "btn btn-default btn-sm active") do %>
      <%= content_tag :span, "", class: "glyphicon glyphicon-thumbs-up" %>
    <% end %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag( class: "btn btn-default btn-sm") do %>
      <%= content_tag :span, "", class: "glyphicon glyphicon-thumbs-up" %>
    <% end %>
  <% end %>
<% end %>